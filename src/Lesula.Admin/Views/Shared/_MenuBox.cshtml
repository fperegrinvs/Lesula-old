@using Telerik.Web.Mvc.UI
@{ Html.Telerik().Menu()
        .Name("Menu")
        .Items(menu =>
        {
            menu.Add()
                .Text("Home")
                .Url(Url.Action("Index", "Home"));

            if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                menu.Add().Text("Users")
                    .Url(Url.Action("Index", "User"));
            }

            if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                menu.Add().Text("Tasks")
                    .Url(Url.Action("Index", "Task"));
            }  
            if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                menu.Add().Text("Data Type")
                    .Url(Url.Action("Index", "DataType"));
            }  
            if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                menu.Add().Text("Data Source")
                    .Url(Url.Action("Index", "DataSource"));
            }          })
        
        .Render();
}
