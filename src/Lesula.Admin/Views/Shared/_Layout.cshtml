<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.23.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/2012.2.607/telerik.common.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/2012.2.607/telerik.metro.min.css")" type="text/css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding: 10px">
    <div class="header">
        <div class="menuBox">
            <img alt="logo" width="130px" style="margin:5px" src="@Url.Content("~/Content/logo.jpg")" />
        </div>
        <div class="menuBox">
            @Html.Partial("_MenuBox")
        </div>
        <div class="userBox">
            @Html.Partial("_UserBox")
        </div>
    </div>
    <div class="content">
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
